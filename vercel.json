{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "img/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/sendWhatsApp", "dest": "index.js" },

    {
      "src": "/keepalive",
      "methods": ["POST"],
      "dest": "keepalive.js"
    },

    { "src": "/img/(.*)", "dest": "/img/$1" },
    { "src": "/(.*\\.css)", "dest": "/$1" },
    { "src": "/(.*\\.html)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "index.js" }
  ],

  "crons": [
    {
      "path": "/keepalive",
      "schedule": "0 */6 * * *"
    }
  ]
}
